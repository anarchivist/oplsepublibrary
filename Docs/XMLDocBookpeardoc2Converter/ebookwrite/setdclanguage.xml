<refentry id="package...ebookwrite.setdclanguage">
 <refnamediv>
  <refname>
   <function>ebookWrite::setDcLanguage</function>
  </refname>
  <refpurpose>Sets the language. Multiple instances are permitted.</refpurpose>
 </refnamediv>
 <refsynopsisdiv>
  <funcsynopsis>
   <funcsynopsisinfo>require_once &apos;/ebookWrite.php&apos;;</funcsynopsisinfo>
   <funcprototype>
    <funcdef>
     void
     <function>ebookWrite::setDcLanguage</function>
    </funcdef>
    <paramdef>
     string
     <parameter>$language</parameter>
    </paramdef>
    <paramdef>
     int
     <parameter>
      <optional>$index = &null;</optional>
     </parameter>
    </paramdef>
   </funcprototype>
  </funcsynopsis>
 </refsynopsisdiv>
 <refsect1 id="package...ebookwrite.setdclanguage.desc">
  &title.desc;
  &notdocumented;
</refsect1>
 <refsect1 id="package...ebookwrite.setdclanguage.param">
  &title.param;
  <para>
   <variablelist>
    <varlistentry>
     <term>
      &type.string;
      <parameter>$language</parameter>
     </term>
     <listitem>
      <para>
       The language to be set. If you want set more then one language send an
       array into this parameter.
</para>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.int;
      <parameter>$index</parameter>
     </term>
     <listitem>
      <para>
       if there is more then one instance of this item, specify it and that item
       will be edited.
</para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 id="package...ebookwrite.setdclanguage.throws">
  &title.throws;
  <para>
   <emphasis>throws</emphasis>
   no exceptions thrown
  </para>
 </refsect1>
 <refsect1 id="package...ebookwrite.setdclanguage.note">
  &title.note;
  &note.notstatic;
</refsect1>
</refentry>
