<refentry id="package...ebook.setdclanguage">
 <refnamediv>
  <refname>
   <function>ebook::setDcLanguage</function>
  </refname>
  <refpurpose>Sets the language. Multiple instances are permitted.</refpurpose>
 </refnamediv>
 <refsynopsisdiv>
  <funcsynopsis>
   <funcsynopsisinfo>require_once &apos;/ebook.php&apos;;</funcsynopsisinfo>
   <funcprototype>
    <funcdef>
     void
     <function>ebook::setDcLanguage</function>
    </funcdef>
    <paramdef>
     $language
     <parameter>$language</parameter>
    </paramdef>
    <paramdef>
     $index
     <parameter>
      <optional>$index = &null;</optional>
     </parameter>
    </paramdef>
   </funcprototype>
  </funcsynopsis>
 </refsynopsisdiv>
 <refsect1 id="package...ebook.setdclanguage.desc">
  &title.desc;
  &notdocumented;
</refsect1>
 <refsect1 id="package...ebook.setdclanguage.param">
  &title.param;
  <para>
   <variablelist>
    <varlistentry>
     <term>
      <type>$language</type>
      <parameter>$language</parameter>
     </term>
     <listitem>
      <para>
       The language to be set. If you want set more then one language send an
       array into this parameter.
</para>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      <type>$index</type>
      <parameter>$index</parameter>
     </term>
     <listitem>
      <para>
       if there is more then one instance of this item, specify it and that item
       will be edited.
</para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 id="package...ebook.setdclanguage.throws">
  &title.throws;
  <para>
   <emphasis>throws</emphasis>
   no exceptions thrown
  </para>
 </refsect1>
 <refsect1 id="package...ebook.setdclanguage.note">
  &title.note;
  &note.notstatic;
</refsect1>
</refentry>
